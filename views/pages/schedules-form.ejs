<div class="form">
    <form method="POST" action="/" class="flex flex-column">
        <div>
            <label for="user_id">User_id:</label>
            <input name="user_id" id="user_id" type="number" required>
        </div>
        <div>
            <label for="day">Day:</label>
            <select name="day" id="day">
                <option value="">--Please select the day--</option>
                <option value="1">Monday</option>
                <option value="2">Tuesday</option>
                <option value="3">Wednesday</option>
                <option value="4">Thursday</option>
                <option value="5">Friday</option>
                <option value="6">Saturday</option>
                <option value="7">Sunday</option>
            </select>
        </div>
        <div>
            <label for="start_at">Start_at:</label>
            <input name="start_at" id="start_at" type="time" required>
        </div>
        <div>
            <label for="end_at">End_at:</label>
            <input name="end_at" id="end_at" type="time" required>
        </div>
        <button class="btn">Submit</button>
    </form>
</div>